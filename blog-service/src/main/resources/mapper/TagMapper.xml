<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.blog.mapper.TagMapper">

    <update id="updateTag" parameterType="com.blog.entities.Tag">
        update tag
        <set>
            <if test="tagName != null">
                tag_name = #{tagName},
            </if>
            <if test="tagStatus != null">
                tag_status = #{tagStatus}
            </if>
        </set>
        where id = #{id}
    </update>
    
    <delete id="deleteTag" parameterType="int">
        delete from tag where id = #{id}
    </delete>
    
    <select id="getTagById" resultType="com.blog.entities.Tag">
        select * from tag where id = #{id}
    </select>
    
    <select id="pageQueryTag" resultType="Tag">
        select * from tag
        <where>
            <if test="tagName != null">
                tag_name like concat('%', #{tagName}, '%')
            </if>
        </where>
    </select>

</mapper>